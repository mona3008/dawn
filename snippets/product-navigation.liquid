<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@900&display=swap" rel="stylesheet">

<style>
  @font-face {
    font-family: 'Cinzel';
    font-style: normal;
    font-weight: 900;
    src: local('Cinzel'), local('Cinzel'), url(https://fonts.gstatic.com/s/cinzel/v13/8vIJ7ww63mVu7gtL8Qs.ttf) format('truetype');
  }

  .product-navigation {
    display: flex;
    justify-content: space-between;
    margin-top: 5px;
    margin-bottom: 30px;
    font-family: 'Cinzel', black;
    font-size: 14px;
  }

  .previous-product {
    text-align: left;
  }

  .next-product {
    text-align: right;
  }

  .product-navigation-button {
    text-decoration: none;
    color: #8b0000;
    position: relative;
    padding-left: 10px;
    padding-right: 10px;
    transition: color 0.2s, border-bottom-color 0.2s;
  }

  .previous-product .product-navigation-button::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
    border-right: 5px solid #8b0000;
    margin-right: 5px;
  }

  .next-product .product-navigation-button::after {
    content: '';
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
    border-top: 5px solid transparent;
    border-bottom: 5px solid transparent;
    border-left: 5px solid #8b0000;
    margin-left: 5px;
  }

  .product-navigation-button:hover {
    color: red;
    border-bottom: 1px solid red;
  }

  .product-navigation-button:hover::before {
    border-right-color: red;
  }

  .product-navigation-button:hover::after {
    border-left-color: red;
  }
</style>

<div class="product-navigation">
  {% if previous_product %}
    <div class="previous-product">
      <a href="{{ previous_product.url }}" title="Previous Product" class="product-navigation-button">
        <span>Previous</span>
      </a>
    </div>
  {% endif %}

  {% if next_product %}
    <div class="next-product">
      <a href="{{ next_product.url }}" title="Next Product" class="product-navigation-button">
        <span>Next</span>
      </a>
    </div>
  {% endif %}
</div>

