{
  "sections": {
    "main": {
      "type": "main-product",
      "blocks": {
        "vendor": {
          "type": "text",
          "settings": {
            "text": "{{ product.vendor }}",
            "text_style": "uppercase"
          }
        },
        "title": {
          "type": "title",
          "settings": {
          }
        },
        "caption": {
          "type": "text",
          "settings": {
            "text": "{{ product.metafields.descriptors.subtitle.value }}",
            "text_style": "subtitle"
          }
        },
        "price": {
          "type": "price",
          "settings": {
          }
        },
        "variant_picker": {
          "type": "variant_picker",
          "disabled": true,
          "settings": {
            "picker_type": "button"
          }
        },
        "quantity_selector": {
          "type": "quantity_selector",
          "disabled": true,
          "settings": {
          }
        },
        "68b20301-9dda-44ef-b39f-4dafe4fecae7": {
          "type": "custom_liquid",
          "settings": {
            "custom_liquid": "{% if product.tags contains 'amazon' %}\n  <div class=\"button-container\">\n    <a href=\"{{ 'https:\/\/www.amazon.com\/' }}\" class=\"button\">\n      <img src=\"{{ 'https:\/\/russdantu.com\/wp-content\/uploads\/2018\/10\/buy-on-amazon-button-png-3-700x259.png' }}\" alt=\"Buy on Amazon\">\n    <\/a>\n  <\/div>\n{% endif %}\n\n<style>\n  .button-container {\n    text-align: center;\n  }\n\n  .button {\n    position: relative;\n    background-color: transparent;\n    color: #fff;\n    font-family: Futura, sans-serif;\n    font-size: 0;\n    border: none;\n    border-radius: 0;\n    cursor: pointer;\n    text-decoration: none;\n    display: inline-block;\n    width: auto;\n    height: auto;\n    padding: 0;\n    transition: background-color 0.3s ease; \/* add transition effect *\/\n  }\n\n  .button img {\n    position: absolute;\n    top: 0;\n    left: 0;\n    width: 80%;\n    height: auto;\n    display: block;\n    z-index: -1;\n  }\n\n  .button:hover {\n    background-color: transparent; \/* change background color on hover *\/\n  }\n<\/style>"
          }
        },
        "buy_buttons": {
          "type": "buy_buttons",
          "disabled": true,
          "settings": {
            "show_dynamic_checkout": true,
            "show_gift_card_recipient": false
          }
        },
        "description": {
          "type": "description",
          "settings": {
          }
        },
        "collapsible-row-0": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Product Details",
            "icon": "none",
            "content": "<p>{{ product.metafields.custom.product_details | metafield_tag }}<\/p>",
            "page": ""
          }
        },
        "share": {
          "type": "share",
          "settings": {
            "share_label": "Share"
          }
        }
      },
      "block_order": [
        "vendor",
        "title",
        "caption",
        "price",
        "variant_picker",
        "quantity_selector",
        "68b20301-9dda-44ef-b39f-4dafe4fecae7",
